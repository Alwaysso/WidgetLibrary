<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--菜单布局自定义属性-->
    <declare-styleable name="MenuLayout">
        <!--1、背景颜色-->
        <attr name="itemBackgroundColor" format="reference|color" />
        <!--2、底部分隔线是否可见，默认为true-->
        <attr name="lineVisible" format="boolean" />
        <!--3、左边设置：图标、显示文字、文字颜色以及大小-->
        <attr name="leftIcon" format="reference" />
        <!--文字-->
        <attr name="leftText" format="reference|string" />
        <!--文字颜色-->
        <attr name="leftTextColor" format="reference|color" />
        <!--文字大小,单位sp-->
        <attr name="leftTextSize" format="integer" />
        <!--4、右边设置：图标、显示文字、文字颜色以及大小-->
        <attr name="rightIcon" format="reference" />
        <!--文字-->
        <attr name="rightText" format="reference|string" />
        <!--文字颜色-->
        <attr name="rightTextColor" format="reference|color" />
        <!--文字大小,单位sp-->
        <attr name="rightTextSize" format="integer" />
    </declare-styleable>

    <!--圆角Button自定义属性-->
    <declare-styleable name="RoundButton">
        <!--填充的背景颜色-->
        <attr name="backgroundColorFill" format="reference|color" />
        <!--圆角的x半径-->
        <attr name="rx" format="dimension" />
        <!--圆角的y半径-->
        <attr name="ry" format="dimension" />
        <!--描边颜色，默认不描边-->
        <attr name="strokeColor" format="reference|color" />
        <!--描边大小-->
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <!--可展开布局自定义属性-->
    <declare-styleable name="ExpandLayout">
        <!--最大缩略行数-->
        <attr name="maxLine" format="integer" />
        <!--展开时对应的图片-->
        <attr name="expandIconResId" format="reference" />
        <!--不展开时对应的图片-->
        <attr name="collapseIconResId" format="reference" />
        <!--展开时对应末尾提示的文字-->
        <attr name="expandMoreText" format="string" />
        <!--不展开时对应末尾提示的文字-->
        <attr name="collapseLessText" format="string" />
        <!--内容文字的颜色-->
        <attr name="contentTextColor" format="reference|color"/>
        <!--更多或收起文字的颜色-->
        <attr name="expandTextColor" format="reference|color" />
        <!--文字大小，单位：dp-->
        <attr name="contentTextSize" format="integer" />
        <!--更多/收起文字大小，单位：dp-->
        <attr name="expandTextSize" format="integer" />
        <!--展开样式-->
        <attr name="expandStyle" format="integer">
            <!--默认样式：图标+文字-->
            <enum name="DEFAULT" value="0" />
            <enum name="ICON" value="1" />
            <enum name="TEXT" value="2" />
        </attr>
    </declare-styleable>

    <!--带圆角指示器布局自定义属性-->
    <declare-styleable name="ArrowRelativeLayout">
        <!--三角形高度-->
        <attr name="arrow_height" format="dimension"/>
        <!--三角形宽度-->
        <attr name="arrow_width" format="dimension"/>
        <!--三角形左边点距离布局左边的水平偏移量，默认居中显示-->
        <attr name="arrow_start_offset" format="dimension"/>
        <!--三角形顶点与三角形底边中心的水平偏移量,负值代表往左偏，正值代表往右偏，默认居中-->
        <attr name="arrow_vertex_offset" format="dimension"/>
        <!--三角形的位置，目前支持在布局上方、在布局下方，默认在上方-->
        <attr name="arrow_position" format="integer">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <!--背景填充颜色-->
        <attr name="background_color" format="color"/>
        <!--圆角的x,y半径值-->
        <attr name="radiu_x" format="dimension"/>
        <attr name="radiu_y" format="dimension"/>
    </declare-styleable>


</resources>